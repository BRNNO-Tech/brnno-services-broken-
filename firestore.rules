rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin (check detailer collection for admin role)
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/detailer/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/detailer/$(request.auth.uid)).data.role == 'admin';
    }
    
    // CUSTOMER collection: Only the authenticated user can read or write their *own* customer document
    // Prevent duplicate sign-ups: can't create if customer or detailer document already exists
    match /customer/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && 
        request.auth.uid == userId &&
        !exists(/databases/$(database)/documents/customer/$(userId)) &&
        !exists(/databases/$(database)/documents/detailer/$(userId));
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent deletes for safety
    }

    // DETAILER collection: *Anyone* can READ/LIST a detailer's public profile (including queries),
    // but ONLY the detailer can create or update their own profile (or admins can update any detailer)
    // Prevent duplicate sign-ups: can't create if detailer or customer document already exists
    match /detailer/{detailerId} {
      allow read, list: if request.auth != null; // Anyone authenticated can read/list detailer profiles
      allow create: if request.auth != null && 
        request.auth.uid == detailerId &&
        !exists(/databases/$(database)/documents/detailer/$(detailerId)) &&
        !exists(/databases/$(database)/documents/customer/$(detailerId));
      allow update: if request.auth != null && (
        request.auth.uid == detailerId || 
        isAdmin()
      );
      // Allow admins to delete detailer documents (for cleaning up rejected accounts)
      allow delete: if isAdmin();
    }

    // Saved Addresses under a customer
    match /customer/{userId}/addresses/{addressId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Saved Vehicles under a customer
    match /customer/{userId}/vehicles/{vehicleId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Packages collection - public read/list, authenticated users can create, admins can update/delete
    match /packages/{pkgId} {
      allow read, list: if true; // Anyone can read/list packages (including queries)
      allow create: if request.auth != null; // Any logged-in user can create packages
      allow update, delete: if isAdmin(); // Only admins can update/delete packages
    }

    // Providers collection (DEPRECATED - kept for migration compatibility)
    match /providers/{providerId} {
      allow read: if true; // Anyone can view (for backward compatibility)
      allow create: if request.auth != null; // Allow creation during migration
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin(); // Only admins can delete during migration
    }

    // Bookings collection
    match /bookings/{bookingId} {
      // Allow read if user is the customer, provider (by providerUserId), or admin
      allow read: if request.auth != null && (
        resource.data.customerId == request.auth.uid ||
        (resource.data.providerUserId != null && resource.data.providerUserId == request.auth.uid) ||
        isAdmin()
      );
      // Allow create for authenticated users - validate that customerId matches the authenticated user
      allow create: if request.auth != null && 
        request.resource.data.customerId == request.auth.uid;
      // Allow update if user is the customer, provider (by providerUserId), or admin
      allow update: if request.auth != null && (
        resource.data.customerId == request.auth.uid ||
        (resource.data.providerUserId != null && resource.data.providerUserId == request.auth.uid) ||
        isAdmin()
      );
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      // Anyone authenticated can create notifications (for system notifications)
      allow create: if request.auth != null;
      // Users can only update their own notifications (mark as read)
      allow update: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
  }
}
