rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Provider logos - users can upload/read their own logos
    match /provider-logos/{userId}/{allPaths=**} {
      // Allow read: anyone can view provider logos (for marketplace display)
      allow read: if true;
      
      // Allow write: only the authenticated user can upload/update their own logos
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');  // Only images
      
      // Allow delete: only the owner can delete their own logos
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Customer uploads (if needed in the future)
    match /customer-uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024;  // Max 10MB
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

